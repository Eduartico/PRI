{
	"add-field-type": [
        {
            "name": "overview_keyword",
            "class": "solr.TextField",
            "positionIncrementGap": "100",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {"class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true},
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.StopFilterFactory"},
                    {"class": "solr.PorterStemFilterFactory"}
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },

                "filters": [
                    {"class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true},
                    {"class": "solr.LowerCaseFilterFactory"},
                    {"class": "solr.StopFilterFactory"},
                    {"class": "solr.PorterStemFilterFactory"},
                    {"class": "solr.SynonymGraphFilterFactory", "expand": true, "ignoreCase": true,"synonyms": "synonyms.txt"}
                ]
            }
        },
        
        {
            "name": "title",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {"class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true},
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {"class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true},
                    {"class": "solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name": "movieVector",
            "class": "solr.DenseVectorField",
            "vectorDimension": 384,
            "similarityFunction": "cosine",
            "knnAlgorithm": "hnsw"
        }
    ],
    "add-field": [
        {
            "name": "movie_title",
            "type": "title",
            "indexed": true
        },
        {
            "name": "genres",
            "type": "strings",
            "indexed": true
        },
        {
            "name": "keywords",
            "type": "overview_keyword",
            "indexed": true
        },
        {
            "name": "director",
            "type": "string",
            "indexed": true
        },
        {
            "name": "top_casts",
            "type": "strings",
            "indexed": true
        },
        {
            "name": "year",
            "type": "pint",
            "indexed": true
        },
        {
            "name": "popularity",
            "type": "pfloat",
            "indexed": true
        },
        {
            "name": "adult",
            "type": "boolean",
            "indexed": true
        },
        {
            "name": "runtime",
            "type": "pint",
            "indexed": true
        },
        {
            "name": "taglines",
            "type": "text_general",
            "indexed": true
        },
        {
            "name": "overview",
            "type": "overview_keyword",
            "indexed": true
        },
        {
            "name": "vector",
            "type": "movieVector",
            "indexed": true,
            "stored": true
        }
    ]
}
